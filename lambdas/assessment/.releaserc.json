{
  "extends": "semantic-release-monorepo",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "releaseRules": [
          { "type": "feat", "scope": "assessment", "release": "minor" },
          { "type": "fix", "scope": "assessment", "release": "patch" },
          { "type": "chore", "scope": "assessment", "release": "patch" },
          { "type": "feat", "scope": "!assessment", "release": false },
          { "type": "fix", "scope": "!assessment", "release": false },
          { "type": "chore", "scope": "!assessment", "release": false }
        ]
      }
    ],
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    "@semantic-release/git",
    "@semantic-release/github"
  ],
  "branches": ["staging"],
  "tagFormat": "assessment-v${version}"
}
