# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set indent style to space and indent size to 2 for JavaScript and React files
[*.{ts,tsx}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4
# Python allows trailing whitespace in multiline strings
trim_trailing_whitespace = false

# Terraform files
[*.tf]
indent_style = space
indent_size = 2
